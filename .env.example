# ═══════════════════════════════════════════════════════════
# VETRIC CVE Discovery Tool - Configurações
# ═══════════════════════════════════════════════════════════

# ┌─────────────────────────────────────────────────────────┐
# │ CVE-PRO Intelbras - Credenciais de Acesso              │
# └─────────────────────────────────────────────────────────┘
# URL base do CVE-PRO (não altere a menos que seja diferente)
CVEPRO_BASE_URL=https://cs.intelbras-cve-pro.com.br

# Seu usuário de administrador do CVE-PRO
CVEPRO_USERNAME=seu_usuario_aqui

# Sua senha do CVE-PRO
CVEPRO_PASSWORD=sua_senha_aqui

# ┌─────────────────────────────────────────────────────────┐
# │ Configurações de Logging                                │
# └─────────────────────────────────────────────────────────┘
# Nível de log: debug | info | warn | error
LOG_LEVEL=info

# Modo debug (mostra TODAS as mensagens STOMP - muito verboso)
# Valores: true | false
DEBUG_MODE=true

# ┌─────────────────────────────────────────────────────────┐
# │ Configurações do Discovery                              │
# └─────────────────────────────────────────────────────────┘
# Salvar todas as mensagens em arquivos JSON
# Valores: true | false
SAVE_RAW_MESSAGES=true

# Reconectar automaticamente se desconectar
# Valores: true | false
AUTO_RECONNECT=true
