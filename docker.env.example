# ===================================
# VETRIC - Docker Environment Variables
# ===================================
# INSTRUÇÕES:
# 1. Copie este arquivo para .env
# 2. Preencha com suas credenciais
# 3. Execute: docker-compose up
# ===================================

# ========== AMBIENTE ==========
NODE_ENV=production

# ========== BANCO DE DADOS ==========
DB_NAME=vetric_cve
DB_USER=postgres
DB_PASSWORD=sua-senha-postgres-aqui

# ========== JWT (VETRIC Auth) ==========
JWT_SECRET=seu-secret-super-seguro-minimo-32-caracteres
JWT_EXPIRES_IN=7d

# ========== CVE-PRO API (Intelbras) ==========
CVE_API_URL=https://cvepro-app.intelbras.com.br
CVE_EMAIL=seu-email@exemplo.com
CVE_PASSWORD=sua-senha-cve

# ========== EVOLUTION API (WhatsApp - Opcional) ==========
EVOLUTION_API_URL=
EVOLUTION_API_KEY=
EVOLUTION_INSTANCE_NAME=

# ========== POLLING ==========
POLLING_INTERVAL=30000

# ========== WEBSOCKET ==========
ENABLE_WEBSOCKET=true

# ========== CORS ==========
# Separe múltiplas origens por vírgula
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ========== FRONTEND ==========
# URL da API para o frontend
VITE_API_URL=http://localhost:3001





